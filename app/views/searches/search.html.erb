  <% if @range == "User" %>
  <!--検索対象モデルがUser-->
<h2>User search for "<%= params[:word] %>"</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Introduction</th>
    </tr>
  </thead>


  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image, size:'50x50' %></td>
        <td><%= link_to user.name %></td>
        <td><%= user.introduction %></td>
      </tr>
    <% end %>
  </tbody>
  <% else %>
</table>


  <!--検索対象モデルがBook-->
<h2>Books search for "<%= params[:word] %>"</h2>
<table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= image_tag book.user.get_profile_image, size:'50x50' %></td>
        <td><%= link_to book.title %></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </tbody>
  <% end %>
</table>